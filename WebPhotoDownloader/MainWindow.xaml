<Window x:Class="WebPhotoDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebPhotoDownloader"
        mc:Ignorable="d"
        Title="Web写真ダウンローダー" Height="790" Width="1366">
    <Grid KeyDown="Grid_KeyDown" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="284*"/>
            <ColumnDefinition Width="555*"/>
            <ColumnDefinition Width="296*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="223*"/>
            <RowDefinition Height="28*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="addressBar" Height="23" Margin="1,19,119,0" TextWrapping="Wrap" Text="URLを入力してください" KeyDown="addressBar_KeyDown" TextInput="addressBar_TextInput" KeyUp="addressBar_KeyUp" FlowDirection="LeftToRight" HorizontalContentAlignment="Right" VerticalAlignment="Top" VerticalContentAlignment="Stretch" Grid.Column="4" Grid.ColumnSpan="2"/>
        <Button Content="Go!" Margin="0,19,1,0" Width="99" Click="Button_Click" Height="23" HorizontalContentAlignment="Center" HorizontalAlignment="Right" VerticalAlignment="Top" VerticalContentAlignment="Center" RenderTransformOrigin="2.596,-1.674" Grid.Column="5"/>
        <wv2:WebView2 Name="wv" Source="https://toaru-web.net/2021/06/10/%e3%82%b5%e3%82%a4%e3%83%88%e4%b8%80%e8%a6%a7/" Margin="5,49,1,49" NavigationStarting="wv_NavigationStarting_1" NavigationCompleted="wv_NavigationCompleted" Grid.RowSpan="2" Grid.ColumnSpan="3" Grid.Column="3"  >
            <wv2:WebView2.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </wv2:WebView2.OpacityMask>
        </wv2:WebView2>
        <ListView Name="ls1" Margin="10,449,0,54" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <RadioButton Content="連番で保存&#xA;"  Name="renban" Margin="10,63,44,0" VerticalAlignment="Top" Height="21" Checked="RadioButton_Checked" Grid.ColumnSpan="2"/>
        <RadioButton Name="select" Content="選択して写真を保存" HorizontalAlignment="Left" Margin="10,84,0,0" VerticalAlignment="Top" Height="15" Width="128" Grid.ColumnSpan="2"/>
        <Button Content="戻る" x:Name="Back" Margin="125,19,101,0" VerticalAlignment="Top" Click="Button_Click_1" Height="25" Grid.Column="3" >
            <Button.Foreground>
                <ImageBrush/>
            </Button.Foreground>
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="矢印ボタン　左1.png"/>
            </Button.Background>
        </Button>
        <Button Content="" Margin="215,19,11,0" VerticalAlignment="Top" Click="Button_Click_2" Height="25" Grid.Column="3" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="矢印ボタン　右1.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Content="" Margin="182,19,44,0" VerticalAlignment="Top" Click="Button_Click_3" Height="25" Grid.Column="3" Foreground="White" RenderTransformOrigin="0.538,0.48">
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush ImageSource="細いバツのアイコン.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Content="再読み込み" Margin="153,19,72,0" VerticalAlignment="Top" Click="Button_Click_4" Height="25" Grid.Column="3">
            <Button.Foreground>
                <ImageBrush/>
            </Button.Foreground>
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush ImageSource="リロードのフリーアイコン (1).png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Content="取得" x:Name="run" Margin="34,345,38,0" VerticalAlignment="Top" Click="Button_Click_5" Height="29" MinWidth="75" MinHeight="20" Grid.Column="1"/>
        <CheckBox Content="zipで写真をまとめる" x:Name="zip" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Height="28" Width="128" Grid.ColumnSpan="2" />
        <Label Content="取得URL一覧" Margin="10,418,0,225" HorizontalAlignment="Left" Width="79" Grid.ColumnSpan="2"/>
        <Label Content="０%&#xD;&#xA;" x:Name="pro" Margin="0,0,179,6" Grid.Column="5" Grid.Row="1" Height="38" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="50" FontSize="18"/>
        <ProgressBar x:Name="prog" Margin="0,0,8,15" Grid.Column="5" Grid.Row="1" RenderTransformOrigin="0.5,0.5" Height="26" VerticalAlignment="Bottom" Width="177" HorizontalAlignment="Right">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <Button Content="キャンセル" x:Name="cancel" Margin="34,374,38,0" VerticalAlignment="Top" Click="Button_Click_6" Height="30" MinWidth="75" MinHeight="20" Grid.Column="1"/>
        <Label Content="" Name ="file" Grid.Column="3" HorizontalAlignment="Left" Margin="151,4,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="10"/>
        <Label Content="保存先：" Name="save" Margin="14,0,0,10" Grid.Row="1" RenderTransformOrigin="0.414,3.038" Height="28" VerticalAlignment="Bottom" Grid.ColumnSpan="2"/>
        <Menu Grid.ColumnSpan="7" Height="19" VerticalAlignment="Top">
            <MenuItem Header="設定" Click="MenuItem_Click">

            </MenuItem>
        </Menu>
        <Button Content="選択をリセット" Margin="34,213,38,0" VerticalAlignment="Top" Click="Button_Click_7" Height="30" MinWidth="75" MinHeight="20" Grid.Column="1"/>
    </Grid>
</Window>
